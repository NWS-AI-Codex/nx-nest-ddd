{
  "name": "@ntk/nest-ddd",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "@ntk/nest-ddd/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/@ntk/nest-ddd",
        "main": "@ntk/nest-ddd/src/index.ts",
        "tsConfig": "@ntk/nest-ddd/tsconfig.lib.json",
        "assets": [
          "@ntk/nest-ddd/*.md",
          {
            "input": "./@ntk/nest-ddd/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./@ntk/nest-ddd/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./@ntk/nest-ddd",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./@ntk/nest-ddd",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "@ntk/nest-ddd/**/*.ts",
          "@ntk/nest-ddd/package.json",
          "@ntk/nest-ddd/generators.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "@ntk/nest-ddd/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
